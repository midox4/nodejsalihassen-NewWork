<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>

  <body>
    <%- include("./partials/header") %>

    <h1><%= objArticle.title %></h1>

    <p style="font-size: 19px; margin: 5em"><%= objArticle.body %></p>

    <button
      datadl="    <%= objArticle._id %>"
      class="create"
    >
      Delete Data
    </button>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <%- include("./partials/footer") %>

    <script>
      const btn = document.querySelector(".create");
      const articleId = btn.getAttribute("datadl");
      console.log(articleId)
      console.log(btn)
      btn.addEventListener("click", (eo) => {
        // quand je clike il doit faire ceci delete
        fetch(`/all-articles/${articleId}`, { method: "delete" })
          .then((response) => response.json())
          .then((data) => window.location.href= data.mylink)   // data is object =  {mylink:"/all-articles"}

          .catch((err) => {
            console.log(err);
          });
      });
    </script>
  </body>
</html>
